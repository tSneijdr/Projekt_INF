package gui;

import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.HashSet;

import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;

import core.Record;

public class SelectionPanel extends JScrollPane {
	/**
	 * 
	 */
	private static final long serialVersionUID = -1394306799106528139L;

	private final HashSet<RecordDisplaySettings> allRecords;

	public SelectionPanel() {
		allRecords = new HashSet<RecordDisplaySettings>();

	}

	public void addRecordDisplaySettings(RecordDisplaySettings s) {
		//allRecords.add(s);
		
		this.add(new Row(s));
	}
	
	public static void main(String[] args){
		JFrame frame = new JFrame();
		frame.setTitle("Test");
		frame.setVisible(true);
		
		Record rec = new Record("Test", null);
		RecordDisplaySettings s = new RecordDisplaySettings(rec);
		
		SelectionPanel p = new SelectionPanel();
		p.addRecordDisplaySettings(s);
		frame.add(p);
	}

	private class Row extends JPanel {
		private final RecordDisplaySettings set;
		private final JCheckBox box;

		public Row(RecordDisplaySettings set) {
			this.set = set;

			box = new JCheckBox("Test");
			box.setSize(10, 10);
			box.setSelected(set.active);
			box.addActionListener(new ActionListener() {

				@Override
				public void actionPerformed(ActionEvent e) {
					set.active = box.isSelected();
				}

			});

			this.add(new JCheckBox());
			
			JLabel lbl = new JLabel(set.RECORD.TITLE);
			lbl.setSize(10, 10);
			lbl.setBackground(Color.BLACK);
			this.add(lbl);
		}
	}
}
