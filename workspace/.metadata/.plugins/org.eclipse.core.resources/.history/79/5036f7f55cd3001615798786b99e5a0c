package gui;

import java.awt.Color;

import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JPanel;

public class ModePanel extends JPanel{

	/**
	 * 
	 */
	private static final long serialVersionUID = -4426179000569155819L;

	public ModePanel(){
		JComboBox<String> selection = new JComboBox<String>();
		selection.addItem("Test1");
		selection.addItem("Test2");
		this.add(selection);
		
		JButton btn = new JButton("Change");
		
		this.add(btn);
	}
	
	public enum Modes{
		Standard ("Standard"),
		TemporalX("Auslenkung in X-Richtung anhand der Reihenfolge der Beobachtung."),
		TemporalY("Auslenkung in Y-Richtung anhand der Reihenfolge der Beobachtung.");
		
		private final String description;
		Modes(String description){
			this.description = description;
		}
		
		public String getDescription(){
			return description;
		}
	}
}
